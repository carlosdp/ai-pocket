{
  "manifest_version": 3,
  "name": "AI Pocket",
  "version": "1.0.0",
  "action": {
    "default_popup": "src/extension/index.html"
  },
  "background": {
    "service_worker": "src/extension/background.ts",
    "type": "module"
  },
  "host_permissions": [
    "http://localhost/*"
  ],
  "externally_connectable": {
    "matches": [
      "http://localhost/*"
    ]
  },
  "permissions": [
    "activeTab",
    "storage"
  ]
}